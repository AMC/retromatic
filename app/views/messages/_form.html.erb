<%= form_with(model: [@room, @topic, message], data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.button type: :submit, class: 'btn btn-green' do %>
      <i class='fas fa-plus'></i> Comment
    <% end %>
  </div>

<% end %>
